<view class="content"><block wx:if="{{list.length!==0}}"><view class="todo-header"><view class="todo-header_left"><text class="active-text">{{text}}</text><text>{{listData.length}}</text></view><view class="todo-header_right"><view data-event-opts="{{[['tap',[['tab',[0]]]]]}}" class="{{['todo-header_right-item',(activeIndex===0)?'active-tab':'']}}" bindtap="__e">全部</view><view data-event-opts="{{[['tap',[['tab',[1]]]]]}}" class="{{['todo-header_right-item',(activeIndex===1)?'active-tab':'']}}" bindtap="__e">代办</view><view data-event-opts="{{[['tap',[['tab',[2]]]]]}}" class="{{['todo-header_right-item',(activeIndex===2)?'active-tab':'']}}" bindtap="__e">完成</view></view></view></block><block wx:if="{{list.length===0}}"><view class="default"><view class="image-default"><image src="../../static/nocontent.png" mode="aspectFit"></image></view><view class="default-info"><view class="default-info_text">您还没有创办任何待办事项</view><view class="default-info_text">点击下方+创建</view></view></view></block><block wx:else><view class="todo-content"><block wx:for="{{listData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['finish',['$0'],[[['listData','',index,'id']]]]]]]}}" class="{{['todo-list',(item.checked)?'todo-finish':'']}}" bindtap="__e"><view class="todo-list_checkbox"><view class="checkbox"></view></view><view class="todo-list_content">{{''+item.content+''}}</view></view></block></view></block><view data-event-opts="{{[['tap',[['create',['$event']]]]]}}" class="create-todo" bindtap="__e"><text class="{{['iconfont iconadd',(textShow)?'create-todo-active':'']}}"></text></view><block wx:if="{{active}}"><view class="{{['create-content',(textShow)?'create-show':'']}}"><view class="create-content-box"><view class="create-input"><input type="text" placeholder="请输入要创建的备忘录" data-event-opts="{{[['input',[['__set_model',['','value','$event',[]]]]]]}}" value="{{value}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['inFoContent',['$event']]]]]}}" class="create-button" bindtap="__e">创建</view></view></view></block></view>